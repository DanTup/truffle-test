{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Run Tests",
			"skipFiles": [
				"<node_internals>/**",
				"${workspaceFolder}/node_modules/**"
			],
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"args": [
				"${workspaceRoot}/out/test/**/*.js"
			],
			"cwd": "${workspaceRoot}",
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "npm: compile-tests"
		}
	]
}
